<% if restaurant.is_liked?(current_user) %>
  <%= link_to 'Unlike', unlike_restaurant_path(restaurant), method: :post, class: "btn btn-default" %>
<% else %>
  <%= link_to '<span class="glyphicon glyphicon-heart"></span>Like'.html_safe, like_restaurant_path(restaurant), method: :post, class: "btn btn-danger" %>
<% end %>
