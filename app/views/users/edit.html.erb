<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">
      <h3>我的Profile</h3>
      <br>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "名稱" %>
          <%= f.text_field :name , class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "自我介紹" %>
          <%= f.text_area :intro , class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, "大頭照" %>
          <%= image_tag @user.avatar, width: 300 %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class:"btn btn-primary" %>
          <%= link_to "取消", user_path(@user), class:"btn btn-default" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
