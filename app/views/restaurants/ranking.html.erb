<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li><%= link_to '首頁', restaurants_path %></li>
      <li><%= link_to '最新動態', feeds_restaurants_path %></li>
      <li class="active"><%= link_to 'Top10人氣餐廳', ranking_restaurants_path %></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <div class="page-header">
        <h2>Top10人氣餐廳<small>(會員收藏數最高)</small></h2>
      </div>

      <% @restaurants.each do |restaurant| %>
        <div class="ranking-item">
          <div class="col-md-4">
            <%= link_to restaurant_path(restaurant) do %>
              <%= image_tag restaurant.image, width: 300, class:"img-responsive" %>
            <% end %>
          </div>
          <div class="col-md-8">
            <h4>
              <%= restaurant.name %>
              <span class="label label-default">收藏數：<%= restaurant.favorites_count %></span>
            </h4>
            <p><%= truncate restaurant.description, length: 140 %></p>
            <div>
              <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
              <%= link_to 'Show', restaurant_path(restaurant), class:"btn btn-primary" %>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      <% end %>

    </div>
  </div>
</div>
