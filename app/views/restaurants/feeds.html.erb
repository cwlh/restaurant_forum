<div class="container">
  <div class="row">

    <div class="col-sm-12">
      <ul class="nav nav-tabs">
        <li><%= link_to '首頁', restaurants_path %></li>
        <li class="active"><%= link_to '最新動態', feeds_restaurants_path %></li>
      </ul>
      <h1 class="text-center">餐廳最新動態</h1>
    </div>

    <div class="col-sm-5 col-sm-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title">最新餐廳</h5>
        </div>
        <div class="panel-body">
          <% @recent_restaurants.each do |restaurant| %>
            <h4>
              <%= link_to restaurant.name, restaurant_path(restaurant) %>
              <small><%= restaurant.category.name %></small>
            </h4>
            <p>
              <%= truncate restaurant.description, length: 80 %>
              <small>- <%= time_ago_in_words(restaurant.created_at) %> ago -</small>
            </p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title">最新評論</h5>
        </div>
        <div class="panel-body">
          <% @recent_comments.each do |comment| %>
            <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
            <p><%= comment.content %></p>
            <p>
              <small>by <%= link_to comment.user.name, user_path(comment.user) %></small>
              <small>- <%= time_ago_in_words(comment.created_at) %> ago -</small>
            </p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
