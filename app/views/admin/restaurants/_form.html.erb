<div class="container width">
  <div class="row">
    <% if @restaurant.errors.any? %>
      <h2>We have some errors here!</h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_for [:admin, @restaurant] do |f| %>

    <div class="form-group">
      <%= f.collection_select :category_id, Category.all, :id, :name, options = {prompt: true}, html_options = {class: "form-control col-sm-4"} %>
    </div>

    <div class="form-group">
      <%= f.label :name, "店名" %>
      <%= f.text_field :name, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group">
      <%= f.label :tel, "聯絡電話" %>
      <%= f.text_field :tel, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "地址" %>
      <%= f.text_field :address, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group">
      <%= f.label :opening_hours, "營業時間" %>
      <%= f.text_field :opening_hours, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "詳細資訊" %>
      <%= f.text_field :description, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "餐廳照片" %>
      <%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group pull-right">
      <%= f.submit class: "btn btn-success" %>
    </div>

  <% end %>
</div>
