<div class = "container">
  <h1>餐廳分類總表</h1>
  <div class = "well">
    <%= link_to "Restaurant", admin_restaurants_path %> |
    <%= link_to "Category", admin_categories_path %>
  </div>

  <table class = "table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>分類名稱</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <th><%= category.id%></th>
        <td><%= category.name%></td>
      </tr>
      <% end %>
  </table>
</div>
