<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <ul class="nav nav-tabs">
        <li class="active"><%= link_to '首頁', restaurants_path %></li>
        <li><%= link_to '最新動態', feeds_restaurants_path %></li>
        <li><%= link_to 'Top10人氣餐廳', ranking_restaurants_path %></li>
        <li><%= link_to '美食達人', users_path %></li>
      </ul>
      <br>
      <ul class="nav nav-pills nav-pills-center">
        <li role="presentation">
          <%= link_to "全部餐廳", root_path %>
        </li>
        <% @categories.each do |category| %>
          <li role="presentation" class="<%= "active" if category == @category %>" >
            <%= link_to category.name, category_path(category) %>
          </li>
        <% end %>
      </ul>
      <br>
    </div>

    <%= render partial: "shared/restaurant_list" %>
  </div>
</div>
